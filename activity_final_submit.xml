<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.androidquiz.FinalSubmit"
    android:background="@drawable/andrwallpaper"
    android:orientation="vertical">


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/congrats"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="cursive"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameFinal"
        android:text="@string/name"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="serif-monospace"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/profileImageFinal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreFinal"
        android:text=""
        android:textSize="40dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:fontFamily="cursive"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Find result"
        android:id="@+id/seeres"
        android:onClick="seeres"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/green"
        android:background="@drawable/andrwallpaper"
        />

</LinearLayout>
