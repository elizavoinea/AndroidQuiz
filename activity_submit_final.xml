<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.androidquiz.submitFinal"
    android:background="@drawable/unnamed">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        //question1
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question1"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:layout_width="164dp"
            android:layout_height="193dp"
            android:src="@drawable/textview" />



        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstRadioGroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ImageView"
                android:id="@+id/ImageViewRButton"
                android:onClick="radioButton"
                android:textColor="@color/white"
                android:buttonTint="@color/white"

                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textView"
                android:id="@+id/TextViewRButton"
                android:onClick="radioButton"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Button"
                android:id="@+id/ButtonRButton"
                android:onClick="radioButton"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                />


        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2)"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/question2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Question2a"
            android:textColor="@color/white"/>

        //question2a
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TypeHere"
            android:id="@+id/questionTwo"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/Question2b"/>

        //question2b

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TypeHere"
            android:id="@+id/questionTwoB"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3)"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="164dp"
            android:layout_height="193dp"
            android:src="@drawable/howmanyviews"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question3a"
            android:textColor="@color/white"/>
        //question3a
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TypeHere"
            android:id="@+id/answerThreeA"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question3b"
            android:textColor="@color/white"/>
        //question3b
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questionThreeBradioGroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Child"
                android:id="@+id/answerThreeBChild"
                android:onClick="radioButton"
                android:textColor="@color/white"
                android:buttonTint="@color/white"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parent"
                android:id="@+id/answerThreeBParent"
                android:onClick="radioButton"
                android:textColor="@color/white"
                android:buttonTint="@color/white"/>

        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question4"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vertical"
            android:textColor="@color/white"
            />

        //question4

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questionFourRadioGroup">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vertical"
                android:id="@+id/answerFourVertical"
                android:onClick="radioButton"
                android:textColor="@color/white"
                android:buttonTint="@color/white"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/horizontal"
                android:id="@+id/answerFourHorizontal"
                android:onClick="radioButton"
                android:textColor="@color/white"
                android:buttonTint="@color/white"/>

        </RadioGroup>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question5"
            android:textColor="@color/white"/>
        //question5
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questionFiveRadioGroup">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vertical"
                android:id="@+id/answerFiveVertical"
                android:onClick="radioButton"
                android:textColor="@color/white"
                android:buttonTint="@color/white"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/horizontal"
                android:id="@+id/answerFiveHorizontal"
                android:onClick="radioButton"
                android:textColor="@color/white"
                android:buttonTint="@color/white"/>

        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question6"
            android:textColor="@color/white"/>
        //question6
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scaleType"
            android:id="@+id/ansSixScaleType"
            android:textColor="@color/white"
            android:buttonTint="@color/white"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_width"
            android:id="@+id/ansSixLayoutWidth"
            android:textColor="@color/white"
            android:buttonTint="@color/white"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_height"
            android:id="@+id/ansSixLayoutHeight"
            android:textColor="@color/white"
            android:buttonTint="@color/white"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_alignParentRight"
            android:id="@+id/ansSixLayoutAlignParent"
            android:textColor="@color/white"
            android:buttonTint="@color/white"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id"
            android:id="@+id/ansSixId"
            android:textColor="@color/white"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/background"
            android:id="@+id/ansSixBackground"
            android:textColor="@color/white"
            android:buttonTint="@color/white"
            />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:onClick="submitAnswers"
        android:background="@color/black"
        android:textColor="@color/white"
        android:buttonTint="@color/white"/>






    </LinearLayout>

</ScrollView>
